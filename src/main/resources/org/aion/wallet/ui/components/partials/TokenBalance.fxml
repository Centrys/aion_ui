<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.aion.wallet.ui.components.partials.TokenBalanceController"
            prefHeight="230.0" prefWidth="300.0" styleClass="anchor-pane" layoutX="525" layoutY="75"
            fx:id="tokenBalancePane">

    <VBox spacing="10">
        <HBox spacing="5">
            <ImageView fitHeight="24.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../icons/triangle-arrow-down.png"/>
            </ImageView>
            <Label text="Token balances" styleClass="token-balance-label" onMouseClicked="#closeTokenBalance" />
        </HBox>
        <VBox fx:id="tokenBalances" spacing="10"/>
    </VBox>

</AnchorPane>
